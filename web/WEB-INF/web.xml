<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- A servlet that redirects users to the display page -->
    <servlet-mapping>
        <servlet-name>display</servlet-name>
        <url-pattern>/displayPage</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>display</servlet-name>
        <servlet-class>DisplayRedirect</servlet-class>
    </servlet>

    <!-- A servlet that redirects users to the admin page -->
    <servlet-mapping>
        <servlet-name>adminPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>adminPage</servlet-name>
        <servlet-class>AdminRedirect</servlet-class>
    </servlet>

    <!-- A servlet that redirects users to the login page -->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/userLogin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>LoginRedirect</servlet-class>
    </servlet>


    <!-- A servlet that redirects users to the login-fail page -->
    <servlet-mapping>
        <servlet-name>loginFail</servlet-name>
        <url-pattern>/login-error</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>loginFail</servlet-name>
        <servlet-class>LoginFailRedirect</servlet-class>
    </servlet>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Sensitive</web-resource-name>
            <url-pattern>/sensitive/*</url-pattern>
        </web-resource-collection>
       <!-- <auth-constraint>
            <role-name>admin</role-name>
